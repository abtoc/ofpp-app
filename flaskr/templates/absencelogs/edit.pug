include _form.pug
extends worklogs/layout.pug

block title
    | 欠席時対応加算編集
block content
    form(method="POST")
        .form-group
            label 日付
            .form-control= item.date
        .form-group
            label 名前
            .form-control= item.person.display_or_name
        +generate_fields(form)
        .btn-group
            input.btn.btn-default(type="submit" value="保存")

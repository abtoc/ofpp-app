extends worklogs/layout.pug

block title
  | 出勤簿 - ペタペタシステム
block content
    .row
        .col-xs-2
            b= today | strftime('%Y年%m月')
        .col-xs-3
            b 「 {{ name }} 」
            b 出勤簿
        .col-xs-5
            .hidden-print
                if not staff
                    a(href="{{ url_for('performlogs.index', id=id, yymm=yymm) }}") 実績記録
        .col-xs-2
            nav(aria-label="ページャー")
                ul.pager.hidden-print
                    li: a(href="{{ url_for('worklogs.index', id=id, yymm=prev) }}") << 前月
                    li: a(href="{{ url_for('worklogs.index', id=id, yymm=next) }}") 翌月 >>
    table.table.table-hover
        thead
            tr
                th 日付
                th 曜日
                th 開始時刻
                th 終了時刻
                th 勤務時間
                th 休憩時間
                th 残業時間
                th 欠勤
                th 遅刻
                th 早退
                th 備考
                th
        tbody
            for item in items
                tr
                    td
                        | {{ item.dd }}
                        if item.presented == None
                            |
                        elif item.presented
                            | ○
                        else
                            | ×
                    td= item.date | weeka
                    td= item.work_in | do_not_show_none
                    td= item.work_out | do_not_show_none
                    td= item.value | do_not_show_none
                    td= item.break_t | do_not_show_none
                    td= item.over_t | do_not_show_none
                    td= '○' if item.absence else ''
                    td= '○' if item.late else ''
                    td= '○' if item.leave else ''
                    td= item.remarks | do_not_show_none
                    td: .hidden-print: .text-right: .hidden-print: .btn-group
                        a.btn-sm.btn-default(href="{{ item.url_edit }}") 編集
                        a.btn-sm.btn-default.confirm(href="{{ item.url_delete }}") 削除
    script.
        $(function(){
            $(".confirm").on('click',function(){
                if(window.confirm("データを削除してもよろしいですか？")){
                    location.href = $(this).attr('href');
                } else {
                    return false;
                }
            });
        });

extends persons/layout.pug

block title
  | 利用者一覧 - ペタペタシステム
block content
    table.table.table-hover
        thead
            tr
                th
                th 名前
                th IDm
                th タイムテーブル
                th 作成日
                th 更新日
                th
        tbody
            for item in items
                tr
                    td= '○' if item.enabled else ''
                    td= item.display_or_name
                    td= item.idm
                    td= item.timerule.caption if item.timerule else ''
                    td= item.create_at.strftime('%Y/%m/%d %H:%M') if item.create_at else ''
                    td= item.update_at.strftime('%Y/%m/%d %H:%M') if item.update_at else ''
                    td: .text-right: .btn-group
                        a.btn-sm.btn-primary(href="{{ url_for('persons.edit', id=item.id) }}") 編集
                        a.btn-sm.btn-primary(href="{{ url_for('persons.destroy', id=item.id) }}") 削除
 